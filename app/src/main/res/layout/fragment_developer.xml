<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="co.krypt.krypton.me.MeFragment">

    <!-- Dummy item to prevent EditText from receiving focus -->

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cliHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Install the kr command-line tool"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:fontFamily="@font/open_sans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/awsButton"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:fontFamily="@font/open_sans_bold"
        android:minWidth="0dp"
        android:text="AWS"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/appGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/digitaloceanButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/digitaloceanButton"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/digitaloceanButton"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@null"
        android:elevation="0dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="DigitalOcean"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/appGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/githubButton"
        app:layout_constraintLeft_toRightOf="@+id/githubButton"
        app:layout_constraintRight_toLeftOf="@id/awsButton"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/terminal_bg_top"
        android:fontFamily="@font/open_sans"
        android:lineSpacingExtra="18sp"
        android:paddingBottom="0dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:shadowColor="@color/appBlack"
        android:text="ENABLE GIT CODE SIGNING"
        android:textColor="@color/appWhite"
        android:textSize="9sp"
        app:fontFamily="@font/open_sans"
        app:layout_constraintEnd_toEndOf="@+id/addKeyTextView"
        app:layout_constraintStart_toStartOf="@+id/addKeyTextView"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/terminal_bg_top"
        android:fontFamily="@font/open_sans"
        android:lineSpacingExtra="18sp"
        android:paddingBottom="0dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:shadowColor="@color/appBlack"
        android:text="ADD MY PUBLIC KEY"
        android:textColor="@color/appWhite"
        android:textSize="9sp"
        app:fontFamily="@font/open_sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awsButton"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/addKeyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/terminal_bg_bottom"
        android:fontFamily="@font/code"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:shadowColor="@color/appBlack"
        android:shadowRadius="4"
        android:text="$ kr github"
        android:textColor="@color/appWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/code"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/terminal_bg_bottom"
        android:fontFamily="@font/code"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:shadowColor="@color/appBlack"
        android:shadowRadius="4"
        android:text="$ kr codesign"
        android:textColor="@color/appWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/code"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/githubButton"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:fontFamily="@font/open_sans_bold"
        android:minWidth="0dp"
        android:text="GitHub"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/appGreen"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintRight_toLeftOf="@id/digitaloceanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addKeyTextView3"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="PGP Sign Git Commits and Tags"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/appGreen"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/addKeyTextView" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/addKeyTextView3"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/terminal_bg_bottom"
        android:fontFamily="@font/code"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:shadowColor="@color/appBlack"
        android:shadowRadius="4"
        android:text="$ kr pair"
        android:textColor="@color/appWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/code"
        app:layout_constraintEnd_toEndOf="@+id/installCommandHelp"
        app:layout_constraintStart_toStartOf="@+id/installCommandHelp"
        app:layout_constraintTop_toBottomOf="@+id/installCommandHelp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/npmHelp"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:fontFamily="@font/code_bold"
        android:text="NPM"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/appGray"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/moreHelp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/brewHelp"
        app:layout_constraintTop_toTopOf="@+id/brewHelp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/curlHelp"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:fontFamily="@font/code_bold"
        android:text="CURL"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/appGreen"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/brewHelp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cliHeader"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/installCommandHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/terminal_bg_top"
        android:fontFamily="@font/code"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:shadowColor="@color/appBlack"
        android:shadowRadius="4"
        android:text="$ curl https://krypt.co/kr | sh"
        android:textColor="@color/appWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curlHelp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/brewHelp"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:fontFamily="@font/code_bold"
        android:text="BREW"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/appGray"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/npmHelp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/curlHelp"
        app:layout_constraintTop_toTopOf="@+id/curlHelp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/moreHelp"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:fontFamily="@font/code_bold"
        android:text="MORE"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/appGray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/npmHelp"
        app:layout_constraintTop_toTopOf="@+id/npmHelp"/>

</android.support.constraint.ConstraintLayout>