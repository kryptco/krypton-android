<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context="co.krypt.krypton.help.HelpFragment">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/installCommand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/terminal_bg_top"
        android:fontFamily="@font/code"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:shadowColor="@color/appBlack"
        android:shadowRadius="4"
        android:text="krypt.co/start"
        android:textAlignment="center"
        android:textColor="@color/appWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extHeader"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/installCommandSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/terminal_bg_bottom"
        android:fontFamily="@font/code"
        android:paddingBottom="8dp"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:shadowColor="@color/appBlack"
        android:shadowRadius="4"
        android:text="go to this link on your computer"
        android:textAlignment="center"
        android:textColor="@color/appGray"
        android:textSize="10sp"
        android:textStyle="bold"
        app:fontFamily="@font/code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/installCommand"
        app:textAllCaps="true"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:text="Done"
        android:textColor="@color/appGreen"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/doneButton"
        app:srcCompat="@drawable/krypton_icon_transparent_circle" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pairButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/flat_button"
        android:backgroundTint="@color/appGreen"
        android:fontFamily="@font/open_sans_bold"
        android:text="Pair with a new Device"
        android:textAllCaps="false"
        android:textColor="@color/appGreen"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/installCommandSubtitle"
        tools:layout_editor_absoluteY="404dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/extHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="Install the browser extension"
        android:textColor="@color/appBlack"
        android:textSize="18sp"
        app:fontFamily="@font/open_sans_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"/>

</android.support.constraint.ConstraintLayout>
